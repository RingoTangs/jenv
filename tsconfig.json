{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2015"],
    "baseUrl": ".",
    "module": "ES2015",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "declaration": false,
    "noEmit": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
